<?xml version="1.0" encoding="ISO-8859-1"?>

<alg_conf>

<!--
Configuration for the SuSAMstarQELCCXSec xsec algorithm.

Configurable Parameters:
.....................................................................................................
Name                         Type     Optional   Comment                                      Default
gsl-integration-type         string   Yes        name of GSL 1D numerical integrator          gauss
gsl-max-size-of-subintervals int      Yes        GSL maximum number of sub-intervals          40000
                                                 for 1D integrator
gsl-relative-tolerance       double   Yes        GSL max evaluations for 1D integrator        1e-3
gsl-rule                     int      Yes        GSL Gauss-Kronrod integration rule           3
                                                 (only for GSL 1D adaptive type)      
gsl-integration-type-2D      string   Yes        name of GSL 2D numerical integrator          adaptive
gsl-max-eval                 int      Yes        required relative tolerance (error)          1000000000
                                                 for 2D integrator
gsl-relative-tolerance-2D    double   Yes        GSL max evaluations for 2D integrator        1e-7
Emax                         double   Yes        The maximum energy after which               45.0
                                                 the xsec is assumed constant
.....................................................................................................
-->

  <param_set name="Default"> 
  </param_set>
  
<!-- 
     Alternative configuration for integrator.
     The miser is slower than adaptive, but can integrate up to 100.0 GeV.
-->
  <param_set name="Miser"> 
    <param type="string" name = "gsl-integration-type-2D">           miser  </param>
    <param type="int"    name = "gsl-max-eval">                    5000000  </param>
    <param type="double" name = "gsl-relative-tolerance-2D">          1e-3  </param>
    <param type="double" name = "Emax">                              100.0  </param>
  </param_set>
  
<!-- 
     Alternative configuration for integrator.
     The vegas is slower than miser, but more precise.
-->
  <param_set name="Vegas"> 
    <param type="string" name = "gsl-integration-type-2D">           vegas  </param>
    <param type="int"    name = "gsl-max-eval">                    5000000  </param>
    <param type="double" name = "gsl-relative-tolerance-2D">          1e-3  </param>
    <param type="double" name = "Emax">                              100.0  </param>
  </param_set> 
  

</alg_conf>

